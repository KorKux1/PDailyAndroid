<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".DashBoard">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bananaGameButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/banana8"
                android:onClick="doNavigateToActivityAction" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wormGameButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wormexplode2"
                android:onClick="doNavigateToActivityAction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/othersButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/otrosinactivo"
                android:onClick="doNavigateToActivityAction"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/binButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bitacorainactivo"
                android:onClick="doNavigateToActivityAction" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profileButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/perfilinactivo"
                android:onClick="doNavigateToActivityAction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/routineButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rutinainactivo"
                android:onClick="doNavigateToActivityAction"
                android:visibility="gone" />

            <Button
                android:id="@+id/levoButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/levodopainactivo"
                android:onClick="doNavigateToActivityAction" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/supportButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/apoyoinactivo"
                android:onClick="doNavigateToActivityAction"
                android:visibility="gone" />

            <Button
                android:id="@+id/foodButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/comidainactivo"
                android:onClick="doNavigateToActivityAction" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/videoButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rutinainactivo"
                android:onClick="doNavigateToActivityAction" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/eventsButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/eventosinactivo"
                android:onClick="doNavigateToActivityAction" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>